{
    "compilerOptions": {
        "incremental": true,
        "target": "es2020",
        "module": "commonjs",
        "allowJs": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "lib": [
            "es2020", "DOM"
        ],
        "outDir": "dist/",
        "baseUrl": ".",
        "paths": {
            "@jdframe/selection-buffer": ["src"]
        },
        "experimentalDecorators": true
    },
    "include": ["src/", "index.ts", "test/**/*.test.ts"],
    "exclude": ["dist/"]
}